<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:src="@drawable/punjabi" />

            <ImageView
                android:id="@+id/onlineIndicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bubble_online" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Abid Shaka"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
android:layout_marginTop="1dp"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="14dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/punjabi"></ImageView>

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/nativespeaker"></ImageView>

                </LinearLayout>

                <TextView

                    android:layout_width="16dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:gravity="center_horizontal"
                    android:text=">"

                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/punjabi"></ImageView>

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/learner"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                <TextView

                    android:layout_width="55dp"
                    android:layout_height="18dp"
                    android:layout_gravity=""
                    android:gravity="right"
                    android:text="2:12 pm"
                    android:textSize="12dp"></TextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>